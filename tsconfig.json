{
  "extends": "@tsconfig/node21/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "noEmitOnError": true,
    "module": "Node16", // Ensure this is set to Node16
    "moduleResolution": "Node16", // Ensure this is set to Node16
    "esModuleInterop": true // Required for Jest compatibility
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/__mocks__"]
}
